<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.one.doo.loan.mapper.CreditRankMapper">
	
  <resultMap type="com.one.doo.loan.domain.CreditRank" id="creditRankMap">
    <id property="rateId" column="rate_id"/>
    <result property="rateName" column="rate_name"/>
    <result property="rateLoan" column="rate_dept"/>
    <result property="rateDescription" column="rate_description"/>
    <result property="kcbPointMin" column="kcb_point_min"/>
    <result property="kcbPointMax" column="kcb_point_max"/>
    <result property="nicePointMin" column="nice_point_min"/>
    <result property="nicePointMax" column="nice_point_max"/>
  </resultMap>	
	
	
<!-- 신용도에 따른 대출 이율 읽기  -->
	<select id="readRate" resultMap="creditRankMap">
		SELECT * 
		FROM credit_rate_category 
		WHERE rate_id=#{rateId}
	</select>


<!-- 이율 변동에 따른 등급별 대출이율 수정  -->
	<update id="updateRate">
		UPDATE credit_rate_category 
		SET rate_id=#{rateId} 
		WHERE rate_id=#{rateId}
	</update>

</mapper>